@using Section_08_Razor_Views.Models
@model PersonAndProductWrapperModel

<!DOCTYPE html>
<html>
<head>
    <title>Person and Product</title>
    <meta charset="utf-8" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>

<body>
    <div class="page-content">
        <h1>Person and Product</h1>
        <div class="box w-100">
            <h3>Person</h3>
            <table class="box w-100">
                <tbody>
                    <tr>
                        <td>Person Name</td>
                        <td>@Model.PersonData.Name</td>
                    </tr>
                    <tr>
                        <td>Gender</td>
                        <td>@Model.PersonData.PersonGender</td>
                    </tr>
                    <tr>
            </table>
        </div>

        <div class="box w-100">
            <h3>Product</h3>
            <table class="box w-100">
                <tbody>
                    <tr>
                        <td>Product ID</td>
                        <td>@Model.ProductData.ProductId</td>
                    </tr>
                    <tr>
                        <td>Product Name</td>
                        <td>@Model.ProductData.ProductName</td>
                    </tr>
                    <tr>
            </table>
        </div>
    </div>
</body>
</html>